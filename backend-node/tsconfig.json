{
    "compilerOptions": {
        "rootDirs": [
            "src"
        ],
        "outDir": "dist",
        "lib": [
            "es2021"
        ],
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
    },
    "exclude": [
        "node_modules",
        "./**/*.spec.ts",
        "./**/*.test.ts",
        "./**/__tests__/*.ts"
    ],
    "include": [
        "./**/*.ts"
    ],
    "ts-node": {
        "esm": true
    }
}